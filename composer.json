{
    "name": "grazulex/laravel-draftable",
    "description": "Add drafts, versioning, and publication workflow to any Eloquent model â€” ideal for content editing, previews, and rollback.",
    "keywords": [
        "laravel",
        "laravel-11",
        "package",
        "drafts",
        "versioning",
        "eloquent",
        "draftable",
        "production-ready",
        "php8",
        "pest",
        "clean-code",
        "solid-principles",
        "artisan-commands",
        "diff-comparison"
    ],
    "type": "library",
    "homepage": "https://github.com/grazulex/laravel-draftable",
    "require": {
        "php": "^8.3",
        "illuminate/support": "^11.0|^12.0"
    },
    "require-dev": {
        "laravel/pint": "^1.22",
        "pestphp/pest": "^3.8",
        "pestphp/pest-plugin-laravel": "^3.2",
        "larastan/larastan": "^3.4",
        "rector/rector": "^2.0",
        "doctrine/dbal": "^4.2",
        "orchestra/testbench": "^9.0|^10.0"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Grazulex\\LaravelDraftable\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Grazulex\\LaravelDraftable\\LaravelDraftableServiceProvider"
            ]
        }
    },
    "authors": [
        {
            "name": "Jean-Marc Strauven",
            "email": "jms@grazulex.be",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/Grazulex/laravel-draftable/issues",
        "source": "https://github.com/Grazulex/laravel-draftable",
        "forum": "https://github.com/Grazulex/laravel-draftable/discussions",
        "wiki": "https://github.com/Grazulex/laravel-draftable/wiki",
        "docs": "https://github.com/Grazulex/laravel-draftable/wiki"
    },
    "scripts": {
        "test": [
            "./vendor/bin/pest --colors=always --coverage"
        ],
        "pint": [
            "./vendor/bin/pint"
        ],
        "phpstan": [
            "./vendor/bin/phpstan analyse --memory-limit=2G --configuration=phpstan.neon"
        ],
        "rector": [
            "./vendor/bin/rector"
        ],
        "full": [
            "composer run-script pint",
            "composer run-script phpstan",
            "composer run-script rector",
            "composer run-script test"
        ],
        "commands": [
            "php artisan laravel-draftable:list --help",
            "php artisan laravel-draftable:diff --help",
            "php artisan laravel-draftable:clear-old --help"
        ]
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}